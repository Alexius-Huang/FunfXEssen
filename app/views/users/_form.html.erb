<%= simple_form_for current_object, url: url_for(action: action), method: method do |f| %>
  <%= f.input :name, label: '姓名' %>
  <h3>Dislikes</h3>
  <div id="dislikes">
    <%= f.simple_fields_for :dislikes do |dislike| %>
      <%= render 'dislike_fields', f: dislike %>
      <div class="links">
        <%= link_to_add_association 'add dislike', f, :dislikes %>
      </div>
    <% end %>
  </div>
  <%= f.button :submit, class: 'btn btn-default'%>
<% end %>
